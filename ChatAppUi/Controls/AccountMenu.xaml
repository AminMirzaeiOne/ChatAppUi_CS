<UserControl x:Class="ChatAppUi.Controls.AccountMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAppUi.Controls"
             Name="accountMenu">
    <Button Style="{StaticResource leftSideButton}">
        <Grid>
            <Border HorizontalAlignment="Left"
        VerticalAlignment="Stretch"
        Width="2.5"
        Background="#ffffff"
        Margin="0 -10"
        Visibility="{Binding Path=Tag, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"
        CornerRadius="0 3 3 0" />
        </Grid>
    </Button>
</UserControl>
